<?xml version="1.0" encoding="UTF-8"?>
<manifest>
    <application>
        <name>Heart Rate Log</name>
        <short_name>H</short_name>
        <app_status>TYPE_SYSTEM_APP</app_status>
        <app_description>
        Displays heart rate in realtime, summarizes this data in a bar graph, and also logs the data to the SD card every minute. 
        This app communicates with an external BLE sensor such as the Zephyr or Mio.
        </app_description>
    </application>

    <permissions>
        <api name="AmuletSubscribeInternalSensor" first_argument="HEARTRATE" />
